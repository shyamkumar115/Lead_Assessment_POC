# Environment Configuration for Lead Assessment POC

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
ENVIRONMENT=development

# Gemini / Google Generative AI
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI Configuration (for LLM features)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# Database Configuration (if using external database)
DATABASE_URL=sqlite:///./data/lead_assessment.db
# DATABASE_URL=postgresql://user:password@localhost:5432/lead_assessment

# Redis Configuration (if using Redis for caching)
REDIS_URL=redis://localhost:6379

# Security
SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Model Configuration
MODEL_RETRAIN_INTERVAL=24  # hours
MODEL_CONFIDENCE_THRESHOLD=0.7

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600  # seconds

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_ENVIRONMENT=development
